<!-- views/edit-post.handlebars -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Edit Post</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <h1>Blog</h1>
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <h2>Edit Post</h2>
    <form action="/api/posts/{{post.id}}" method="PUT" class="edit-post-form">
      <label for="post-title">Title:</label>
      <input type="text" id="post-title" name="title" value="{{post.title}}" required>
      <label for="post-content">Content:</label>
      <textarea id="post-content" name="content" required>{{post.content}}</textarea>
      <button type="submit">Update Post</button>
    </form>
  </main>

