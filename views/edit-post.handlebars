<div class="card">
  <div class="card-body">
    <h3 class="card-header">Edit Post</h3>
    <form class="edit-post-form">
      <div class="form-group">
        <label for="post-title">Title</label>
        <input name="post-title" type="text" value="{{post.title}}" class="form-control" />
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        <textarea name="content" class="form-control" rows="5">{{post.content}}</textarea>
      </div>
      <button type="submit" class="btn btn-primary">Update Post</button>
      <button type="button" class="delete-post-btn btn btn-danger">Delete Post</button>
    </form>
  </div>
</div>

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
