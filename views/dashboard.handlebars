{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  {{#each posts}}
    {{> dashboard-postinfo this}} <!-- Include the 'dashboard-postinfo' partial for each post -->
  {{/each}}
</section>
{{/if}}

<button type="submit" class="btn">
  <a class="link" href="/dashboard/new">+ New Post</a> <!-- Create a link to the '/dashboard/new' route -->
</button>

<script src="/js/create-post.js"></script> <!-- Include the 'add-post.js' JavaScript file -->
