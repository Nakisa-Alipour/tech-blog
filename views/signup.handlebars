<div class="card">
  <div class="card-body">
    <!-- Signup form header -->
    <h3 class="card-header">Sign Up</h3>
    <!-- Signup form -->
    <form id="signup-form">
      <!-- Username field -->
      <div class="form-group">
        <label for="username-signup">Username</label>
        <input type="text" class="form-control" id="username-signup" autofocus="true" aria-describedby="username">
      </div>
      <!-- Password field -->
      <div class="form-group">
        <label for="password-signup">Password</label>
        <input type="password" class="form-control" id="password-signup">
      </div>
      <!-- Signup button -->
      <button type="submit" class="btn btn-primary btn-lg">Signup!</button>
    </form>
  </div>
</div>

<script src="/js/signup.js"></script>
