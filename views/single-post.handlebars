{{! Render the post info using the "post-info" partial }}
{{> post-info post}}

{{#if logged_in}}
{{! Display a card for leaving comments if the user is logged in }}
<div class="card">
  <h3 class="card-header">Leave a Comment</h3>
  <form class="card-body comment-form" id="comment-form">
    {{! Form for submitting comments }}
    <div class="form-group">
      <label for="comment">Comment:</label>
      <textarea id="comment" name="comment-body" class="form-control" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
{{/if}}

{{! Render the comments section using the "comments" partial and pass the post's comments data }}
{{> comments post.comments}}

{{#if logged_in}}
{{! Include the comment.js script if the user is logged in }}
<script src="/js/comment.js"></script>
{{/if}}

